---
import { Image } from '@astrojs/image/components'
import { trimPublic } from '@utils/utils';
import Container from './atoms/Container.astro';
---

<div class="relative">
    <Container>

        <div class="md:relative isolate overflow-hidden rounded-3xl">
            <Image 
                src="/images/home/blake-wisz-GFrBMipOd_E-unsplash.jpg"
                width={1400} 
                aspectRatio={3/2} 
                alt="Coffee shop owner in coffeshop" 
                class="absolute -z-10 inset-0 h-full w-full object-cover transition-all"
            />

            <div class="absolute -z-10 w-full h-full inset-0 bg-black opacity-30"></div>
            <div class="md:px-12 pt-80 pb-12 max-w-5xl">
                <h1 class="font-headings text-5xl text-white font-bold">Empower Your Business with our Cutting-Edge Digital Marketing Solutions</h1>
                <p class="text-white text-lg mt-6 max-w-prose">Maximize your online presence, reach more customers and drive sales with endscape. Unlock endless opportunities and growth for your business.</p>
            </div>
        </div>
    </Container>
</div>