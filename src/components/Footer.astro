---
import Container from "./atoms/Container.astro";
import Logo from "./atoms/Logo.astro";
---

<footer class="bg-zinc-900 rounded-t-3xl md:bg-transparent md: rounded-none md:py-8">
    <Container>
        <div class="bg-gray-900 pt-12 pb-10 md:px-12 md:rounded-3xl">
            <div class="text-white text-center">
                <h3 class="text-2xl font-headings font-bold">Let's get started on something great</h3>
                <p class="mt-4">Lorem ipsum dolor, sit amet consectetur adipisicing elit.</p>
            </div>
            <div class="h-48"></div>

            <div class="text-white flex items-center justify-between">
                <Logo />
                <p>&copy; {new Date().getFullYear()} endscape. All rights reserved.</p>
            </div>
        </div>
    </Container>
</footer>